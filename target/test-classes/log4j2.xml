<Configuration status="WARN">
    <Appenders>

        <!-- FILE APPENDER: Stores all logs -->
        <File name="LogFile" fileName="logs/framework.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c - %m%n"/>
        </File>

    </Appenders>

    <Loggers>

        <!-- ROOT Logger: TRACE = capture everything -->
        <Root level="trace">
            <AppenderRef ref="LogFile"/>
        </Root>

    </Loggers>
</Configuration>
